<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    tools:context=".MainActivity"
    android:background="?android:attr/windowBackground">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tải File từ Internet"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Ô nhập URL -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập URL file tải"
        app:startIconDrawable="@android:drawable/ic_menu_search"
        android:layout_marginBottom="16dp"
        app:boxBackgroundMode="outlined"
        app:boxStrokeColor="?attr/colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:hint="https://example.com/file.zip"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nút Download -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TẢI NGAY"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"
        android:icon="@android:drawable/stat_sys_download"
        android:iconGravity="textStart"
        android:iconPadding="12dp"
        android:paddingVertical="10dp"
        app:cornerRadius="12dp"
        app:backgroundTint="?attr/colorPrimary"
        android:textColor="@android:color/white" />

    <!-- Gợi ý ví dụ -->
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ví dụ: https://speed.hetzner.de/10MB.bin"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="13sp"
        android:layout_marginTop="16dp" />

</LinearLayout>
